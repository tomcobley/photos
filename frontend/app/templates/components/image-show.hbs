<div id="image-show" class="show-image">

  <div class="image-loading absolute-centered">
    <div class="spinner-border spinner-white" role="status">
      <span class="sr-only">Loading...</span>
    </div>
    <div class="image-loading-info">
      <p class="primary">{{image.title}}</p>
      <p class="secondary">{{image-coords image=image}}</p>
    </div>

  </div>


  <img src={{image.src}} alt={{image.title}} class="image-fullscreen hidden">

  <div class="image-info hidden">
    <p class="primary">{{image.title}}</p>
    <p class="secondary">{{image-coords image=image}}</p>
  </div>

</div>
